#include <stdio.h>
#include <string.h>
#define MAX 200

int i , j ;
int main(){
    char str[MAX];
    
    printf("Nhap vao chuoi bat ki: ");
    fgets(str,MAX,stdin);
    str[strcspn(str,"\n")] = '\0';
    
    int position = 0;
    int maxLength = 0;
    
    int n = strlen(str);
    int i = 0;
    while(i<n){
        //Dung 1 bien de dem do dai cua tu bat dau tu i
        int j = i;
        int countWord = 0;
        while(str[j]!=' ' && j<n){ //Vong lap nay dung khi str[j] = ' ' hoac j = n-1 (cuoi chuoi)
            j++;
            countWord++;
        }
        if(maxLength<countWord){
            position = i;
            maxLength = countWord;
        }
        i = j+1; //Bien i chay ra sau vi tri cua dau cach de bat dau dem tu tiep theo
    }
    
    printf("\nCac tu co do dai lon nhat la: %d \n",maxLength);
    i = 0;
    while(i<n){
        //Dung 1 bien de dem do dai cua tu bat dau tu i
        int j = i;
        int countWord = 0;
        while(str[j]!=' ' && j<n){ //Vong lap nay dung khi str[j] = ' ' hoac j = n-1 (cuoi chuoi)
            j++;
            countWord++;
        }
        if(maxLength==countWord){
            for( j=i;j<maxLength+i;j++){
                printf("%c",str[j]);
            }
            printf("\n");
        }
        i = j+1; //Bien i chay ra sau vi tri cua dau cach de bat dau dem tu tiep theo
    }
}
